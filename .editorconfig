root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.go]
indent_style = tab

[*.{js,mjs}]
indent_size = 2

[*.json]
indent_size = 2

[*.{html,gohtml,vue}]
indent_size = 2

[*.{css,scss}]
indent_size = 2
